<core:CorePage x:Class="MediaSharer.Views.DashboardPage"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:core="using:MediaSharer.Core"
               xmlns:local="using:MediaSharer.Views"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">
            <Button Content="Parcourir..."
                    Margin="0,0,12,0"
                    Command="{x:Bind PageViewModel.PickImagesCommand}" />
            <Button x:Name="ShareButton"
                    FontFamily="Segoe UI Symbol"
                    Content="&#xE2B4; Partager"
                    Command="{x:Bind PageViewModel.ShareImageCommand}" />
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <GridView x:Name="ImageGridView"
                      ItemsSource="{x:Bind PageViewModel.Images}"
                      IsItemClickEnabled="False"
                      CanDragItems="False"
                      AllowDrop="False"
                      CanReorderItems="False"
                      SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Image Stretch="Uniform"
                               Source="{Binding}"
                               Width="190"
                               Height="130"
                               AutomationProperties.AccessibilityView="Raw" />
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>
    </Grid>
</core:CorePage>
